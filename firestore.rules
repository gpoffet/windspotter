rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Config: public read, admin users can write
    match /config/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Water bodies: authenticated read, admin write
    match /waterBodies/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Forecasts: public read, admin SDK write only
    match /forecasts/{doc} {
      allow read: if true;
      allow write: if false;
    }

    // Users (v2): authenticated user can read/write own data
    match /users/{uid}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Push notification subscriptions: user can manage their own
    match /pushSubscriptions/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
